<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".view.activity.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_desc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingHorizontal="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/star_24" />

        <TextView
            android:id="@+id/t_title_decs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:gravity="center"
            android:text="League Name"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_s_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country : " />

            <TextView
                android:id="@+id/tv_d_country_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_s_country"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_s_formedyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formed Year : " />

            <TextView
                android:id="@+id/tv_d_formedyear_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_s_formedyear"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_s_currsess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Session : " />

            <TextView
                android:id="@+id/tv_d_currsess_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_s_currsess"
                android:text="" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_d_locked_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unlocked" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description : "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/t_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>
</ScrollView>